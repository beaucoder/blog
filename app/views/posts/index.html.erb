<h1>Listing posts</h1>

<%= link_to 'New Post', new_post_path %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to 'Home Page', root_path %>
<p> </p>

<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
	</tr>

	<tr><td>&nbsp;</td></tr>  <! This just adds a blank line in the table >
	
	<% @posts.each do |post| %>
		<tr>
			<td><%= post.title %></td>
			<td><%= post.text %></td>
			<td><%= link_to 'Show', post_path(post) %></td>
			<td><%= link_to 'Edit', edit_post_path(post) %></td>
			<td><%= link_to 'Destroy', post_path(post), 
							method: :delete, data: {confirm: 'Are you sure?'} %></td>
		</tr>
	<% end %>
</table>
